{
  "name": "next-boilerplate",
  "version": "1.0.0",
  "description": "Next.js Boilerplate",
  "repository": "https://github.com/diasjoaovitor/next-boilerplate.git",
  "author": "Jo√£o Vitor <jvitordiass@outlook.com.br>",
  "license": "MIT",
  "scripts": {
    "dev": "./init.sh",
    "build": "next build",
    "start": "next start",
    "test": "./init.sh test",
    "test:watch": "jest --watchAll",
    "test:e2e": "exec playwright test",
    "test:e2e:ui": "exec playwright test --ui",
    "services:up": "docker compose -f src/infra/compose.yml up -d",
    "services:stop": "docker compose -f src/infra/compose.yml stop",
    "services:down": "docker compose -f src/infra/compose.yml down",
    "services:wait:database": "node src/infra/scripts/wait-for-postgres.js",
    "db:migrate": "exec prisma migrate dev",
    "db:studio": "exec prisma studio",
    "db:generate": "exec prisma generate",
    "db:reset": "exec prisma migrate reset --force",
    "lint:check": "next lint",
    "lint:fix": "next lint --fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "generate": "plop --plopfile generators/plopfile.js",
    "prepare": "husky",
    "postinstall": "pnpm db:generate"
  },
  "dependencies": {
    "@prisma/client": "6.16.1",
    "@prisma/extension-accelerate": "2.0.2",
    "better-auth": "1.3.9",
    "next": "15.5.2",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.35.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/async-retry": "1.4.9",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.1",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "async-retry": "1.3.3",
    "commitlint-config-emoji-convention": "1.0.1",
    "concurrently": "9.2.1",
    "cross-fetch": "4.1.0",
    "dotenv": "17.2.2",
    "eslint": "9",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "jest-environment-jsdom": "30.1.2",
    "lint-staged": "16.1.6",
    "plop": "3.1.2",
    "prettier": "3.6.2",
    "prisma": "6.16.1",
    "typescript": "5.9.2"
  }
}
